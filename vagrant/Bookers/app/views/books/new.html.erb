<header class="title2">
<h1>Books</h1>
</header>
<table class="main">
	<tr><th>Title</th><th>Body</th></tr>

<% @books.each do |book| %>

<tr>
	<td><%= book.title %></td>
	<td><%= book.body %></td>
</td>
</tr>
<% end %>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<div>
<%= f.submit 'Create Book' %>
</div>
<% end %>
