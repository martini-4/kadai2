<% if flash[:successfully_destroy] %>
	<div class="successfully">
		<%= flash[:successfully_destroy] %>
	</div>
<% end %>

<body class="new">
	<header class="title2">
		<h1>Books</h1>
	</header>
	<table class="new-main">
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		<% @books.each do |book| %>

				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book.id) %>
					<%= link_to 'Edit', edit_book_path(book.id) %>
					<%= link_to'Destroy', book_path(book.id), method: :Delete, data: { confirm: 'Are you sure?'} %></td>
				</tr>
		<% end %>
	</table>

	<h2 class="title3">New book</h2>

	<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<div>
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>
</body>